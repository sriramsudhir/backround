@import "variables.styl"

.no-scroll .header-sticky.sticky
.show-cart.detail-page .header-sticky.sticky
  position static

.header-sticky
  background inherit

.header-sticky.sticky
  position fixed
  top 0
  left 0
  right 0



header.no-banner
  padding-top 0
  &:after
    display none

.lang-dropdown.custom-dropdown > span
  background none
  border none
  padding 5px 0
  height auto
  line-height 1

.no-scroll header
  z-index 2

header
  padding-top 4%
  display flex
  flex-direction column
  background header-bg
  position absolute
  top 0
  left 0
  right 0
  z-index 9

  &:after
    background #eee
    content ''

  &:after
  .top-banner
    position absolute
    top 0
    left 0
    right 0
    padding-bottom 4%

  .top-banner
    z-index 1

    img
      height 100%
      width 100%
      position absolute
      top 0
      bottom 0
      left 0
      right 0


  .top-wrapper
    position relative
    z-index 2
    color header-color
    font-size .9em
    border-bottom 1px solid header-border

    .left-side
    .right-side

      .arrow-down
        margin 0 5px
        height 14px
        width 14px
        min-width 14px

      a
        padding 7.5px 0

  .container-fluid.flex
    margin-top 10px
    margin-bottom 10px

  .logo
    img
      object-fit contain
      max-height 35px

  .arrow-down
    height 18px
    width 18px

  .dropdown
    z-index 11
    min-width 150px
    padding 10px 0
    display none
    position absolute
    top 100%
    left auto
    right 0
    background white
    color font-color
    border-radius border-radius
    box-shadow 1px 2px 10px rgba(0, 0, 0, .1)

    button.clear-btn
    a
      height auto !important
      border-radius 0
      text-align left
      width 100%
      font-size 1em
      font-weight 400
      line-height 1
      display block
      box-shadow none
      padding 15px 20px

      &:hover
        background #eee

      &:active
        background #ddd

  .active
    display block

  button
  input
    height btn-height !important

  .left-area
  .right-area
    width 250px

  .right-area
    button
    .cart-btn
      color header-color
      font-weight 600
      font-size 1.05em

    .cart-badge
      position absolute
      top 0
      left 12px
      background primary-color
      border 1px solid header-bg
      border-radius 100%
      text-align center
      height 22px
      width 22px
      line-height 20px
      font-size 12px
      z-index 1
      color #fff

  .bottom-area
    border-top 1px solid header-border
    border-bottom 1px solid #DDD
    font-size 1.05em
    color header-color

    & > div

      & > .flex
        margin 0 -10px

      a
        font-size .95em
        span
          text-transform uppercase
          font-size .9rem
          padding 12.5px 10px

        &:hover
          background rgba(0, 0, 0, .06)

        &:active
          background rgba(0, 0, 0, .1)

//RESPONSIVE

@media only screen and (max-width: 992px)
  header
    .top-banner.banner-wrapper
      button
        top 50%
        transform translateY(-50%)
        right 2.5px

    .left-area
    .right-area
      width auto

    form
      margin 0 20px

@media only screen and (max-width: 768px)
  .rtl header .container-fluid.flex .right-area
    left 15px
    right auto


  header .left-area
    min-height 30px

  header
    .top-wrapper
      padding 5px 0
      font-size .85em

      .container-fluid > .flex
        flex-direction column

      .left-side
      .right-side
        justify-content left

        a
          padding 5px 0

          span > span
            display none

    .bottom-area
      overflow auto

      & > div
        a
          span
            padding 10px

    button
    input
      height 40px !important

    .container-fluid.flex
      display block

      .logo
        img
          width auto
          height 25px

      .right-area
        position absolute
        top -10px
        right 15px

        button
          .cart-icon
            height 25px
            width 25px

    form
      margin 5px 0 0


@media only screen and (max-width: 576px)
  .header-sticky.sticky .container-fluid.flex .right-area
  .header-sticky.sticky .left-area
    display none

  header
    padding-top 6%

    &:after
    .top-banner
      padding-bottom 6%


@media only screen and (max-width: 420px)
  header
    .top-wrapper
      .sided

        .left-side
          gap 0

        .left-side a
        .right-side a
          padding-top 0
          padding-bottom 0

        .left-side
          justify-content space-between

          & > a:first-child
          & > span
            display none


@media only screen and (max-width: 380px)
  header
    .top-wrapper
      .container-fluid > .flex
        flex-direction row

      .sided
        .left-side a
          display none


@media only screen and (max-width: 320px)
  header
    .right-area
      .cart-btn
        .title
          display none
