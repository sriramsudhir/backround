.cart .cart-product-tile .img-wrapper
  padding-bottom 70%

.shipping .cart-product-tile .img-wrapper
  padding-bottom 70%

.shipping .cart-product-tile:last-child
  border none

.address-btn
  display flex
  height auto
  line-height 1.7
  padding 25px 30px
  justify-content center
  align-items center
  flex-direction column
  width 160px
  font-size .9rem
  background #F2F3F5
  border 1px solid #ddd

  .icon-wrap
    height 40px
    width 40px
    display flex
    align-items center
    justify-content center
    background #fff
    border 1px solid #ddd
    border-radius 100%

    i
      height 25px
      width 25px

  &:hover
    background primary-lite-color


.address-card
  display flex
  flex-direction column
  max-width 300px

  span
    line-height 1.7

  .address-title
    .outline-btn
      height 32px
      font-size .8rem
      line-height 30px

.shipping
  .pop-over-content
    .b-b
      &:last-child
        border-bottom none
        margin-bottom 0 !important
        padding-bottom 0 !important

//RESPONSIVE
@media only screen and (max-width: 992px)
  .shipping
    .detail-left
      display block

      .address-form
        flex 1

      .address-wrapper
        max-width 100%
